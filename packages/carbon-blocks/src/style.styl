$selectionHaloColor = #accef78d
$quoteColor = #555
$lineHeight = 30px

#root
	position absolute
	width 100%
	height: 100%
	// background #eee

.carbon-app
	font-family: Arial, Helvetica, sans-serif
	margin: 0 auto
	// position absolute
	// position relative
	// width: 100%
	// padding: 0
	outline none
	// overflow: auto;
	white-space: pre-wrap;
	 //height: 400px
	width 100%
	flex: 1
	// padding: 50px 0px
	// overflow: hidden

.carbon-app-content
	position relative
	height: 100%
	width 100%
	overflow: hidden
	margin: 0 auto

.carbon-header
	position: sticky
	top 10px
	padding: 0px 100px
	height: 30px
	background #fafafa
	display: flex
	align-items: center
	gap 4px
	z-index: 1
	margin-bottom: 12px
	// outline: 2px dashed blue;
	.carbon-control
		// background #000
		padding 4px
		cursor: pointer
		user-select: none
		&:hover
			background #eee

.carbon-park-cursor
	position absolute
	left: 50%
	transform: translateX(-50%)
	z-index: 100

.document-wrapper
	position absolute
	top: 0
	left: 0
	width 100%
	height: 100%
	overflow: auto
	display: flex
	flex-direction: column
	container-type: inline-size

.carbon-document-picture
	padding-top 300px
	background #000
	.carbon-document-picture-overlay
		position absolute
		width 100%
		left: 0
		top: 0
		height: 300px
		overflow: hidden
		display: flex
		align-items: center
		justify-content: center
		img
			width: 100%

[data-name=document],
[data-as=document]
	position relative
	outline none
	padding: 0px 50px
	padding-bottom 200px
	overflow: inherit
	.document-content
		max-width: 700px
		margin: 0 auto;

@container (min-width: 800px) {
	[data-name=document],
	[data-as=document] {
		padding-left: 100px
		padding-right: 100px
		min-height: 100%
	}
}

@container (min-width: 1000px) {
	[data-name=document],
	[data-as=document] {
		padding-left: calc(50% - 360px)
		padding-right: calc(50% - 360px)
		min-height: 100%
	}
}

[data-name=section]
[data-name=collapsible]
[data-name=bulletedList]
[data-name=numberedList]
[data-name=todo]
[data-name=collapsibleList]
[data-name=h1]
[data-as=h1]
[data-name=h2]
[data-as=h2]
[data-name=h3]
[data-as=h3]
[data-name=h4]
	// padding-left: 10px
	// padding: 1px 0
	margin-top 2px
	// background rgba(168, 225, 255, 0.316)
	> [data-type=children]
		padding-left 30px
	position relative
	line-height: $lineHeight
	[data-type="content"]
		// padding-left: 2px
		// padding: 2px 0px
		display: flex
		align-content: flex-start
		[data-name=title]
			flex 1

[data-name=numberedList][data-as=h1]
	[data-type=content]
		padding-left: 20px

[data-name=numberedList][data-as=h2]
	[data-type=content]
		padding-left: 12px

--webkit::spelling-error {
  color: teal!important;
}

[data-name=document] > [data-type="content"],
[data-as=document] > [data-type="content"]
	padding: 40px 0 10px 0

[data-name=document] > [data-type="content"] > [data-name="title"],
[data-as=document] > [data-type="content"] > [data-name="title"]
	font-size: 40px
	font-weight: bold
	line-height: 50px

[data-as=h1],
[data-as=h2],
[data-as=h3],
[data-as=h4],
[data-name=h1],
[data-name=h2],
[data-name=h3],
[data-name=h4]
	margin: 0
	&> [data-type="content"] > [data-name="title"]
		font-weight: bold

[data-name=h1] > [data-type="content"],
[data-as=h1] > [data-type="content"]
	font-size: 32px
	margin-top: 30px
	margin-bottom: 10px
	line-height: 40px

[data-name=h2] > [data-type="content"],
[data-as=h2] > [data-type="content"]
	font-size: 26px
	margin-top: 24px
	margin-bottom: 10px
	line-height: 30px
[data-name=h3] > [data-type="content"],
[data-as=h3] > [data-type="content"]
	font-size: 22px
	margin-top: 20px
	margin-bottom: 2px
	line-height: 30px

[data-name=h4] > [data-type="content"],
[data-as=h4] > [data-type="content"]
	font-size: 18px
	margin-top: 16px
	margin-bottom: 10px
	line-height: 30px

span[data-name=text] {
	white-space: pre-wrap;
	word-break: break-word;
}

[data-name="divider"]
	outline: none
	position relative
	cursor default
	height: 15px
	margin-bottom: 1px
	caret-color: transparent;
	.divider
		position relative
		top: 7px
		height: 2px
		width: 100%
		background: #eee
		// border-bottom: 1px solid rgba(55, 53, 47, 0.184)

.carbon-selection-halo
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	background: $selectionHaloColor
	border-radius: 2px
	pointer-events: none

[data-selected=true]
	caret-color: transparent;

.carbon-collapsible__control
	user-select: none
	// position absolute
	left 0
	top 1px
	// font-size: 12px
	// padding-top 4px
	padding-left 5px
	cursor: pointer
	font-size: 20px
	line-height: $lineHeight

[data-name=collapsible]
	> [data-type=content] > [data-name=title]
		margin-left 8px
	> [data-type=children]
		padding-left 30px
	padding-left: 0px
	.carbon-collapsible__control
		left 4px
		width 22px
		height $lineHeight
		display: flex
		line-height: $lineHeight
		align-items: center
		// background: #eee

[data-name=bulletedList]
	> [data-type=children]
		padding-left 0px
	padding-left: 30px
	.carbon-bulletedList__label
		padding 0 10px
		user-select: none
		position absolute
		left 0

[data-name=todo]
	position relative
	> [data-type=children]
		padding-left 0px
	padding-left: 30px
	.carbon-todo__control
		display: flex
		position absolute
		left 0
		align-items: center
		height $lineHeight
		user-select: none
		padding-left 7px

		input
			height: 18px
			width: 18px
			// margin-top 6px
			&:hover
				cursor: pointer
			// vertical-align: middle

[data-name=numberedList]
	> [data-type=children]
		padding-left 0px
	padding-left: 30px
	.carbon-numberedList__label
		padding 0 10px
		user-select: none
		position absolute
		left 0

[data-name=equation]
	position relative
	margin-top 2px
	display: flex
	justify-content: center
	outline: none
	cursor pointer
	min-height: 54px
	> [data-name=equation-wrapper]
		display: flex
		// min-height: inherit
		align-items: center
		overflow: hidden
		> [data-type=equation-content]
			align-items: center
			justify-content: center
			display: block
			user-select: none
			// text-align: center
			min-height: inherit
			width: 100%
			> *
				user-select: none
		> [data-type=content]
			position absolute
			width: 260px
			min-height: 100px
			top calc(100% + 6px)
			// left 50%
			padding: 16px
			background #fff
			z-index: 1
			box-shadow: 0 0 10px rgba(0,0,0,0.2)
			border-radius: 4px

.katex
	display: block
	text-align: center
	white-space: nowrap
	.katex-html
		display: block
		position relative

// [data-content-editable="false"]
// 	-webkit-user-modify: read-only;

[data-name="title"]
	position relative
	&:after
		position absolute
		content attr(placeholder)
		left 0
		top 0
		pointer-events: none
		opacity: 0.2

