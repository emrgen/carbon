.carbon-rect-select,
.carbon-app-events
	width 100%
	height 100%
	overflow: hidden
.carbon-rect-select.rect-active
	caret-color: transparent
	user-select: none
	::selection
		background: transparent
.carbon-rect-select.rect-dragging
	.carbon-selection-halo[data-selected=true]
		background: transparent!important

.carbon-halo-container
	position absolute
	top: 0

[data-name=carbon]
	display: flex
	padding: 10px
	gap 10px
	[data-name=document],
	[data-as=document]
		flex 1

[data-name=fileTree]
	width 200px
	height: 500px
	background #fafafa
	outline: 2px dashed blue;
	padding: 10px 4px
	// margin: 10px 00px 0px 10px
	padding-top 90px

[data-name=fileTreeItem]
	border-radius: 4px
	padding: 0px 4px
	&:hover
		background: #eee
	&> [data-type=children]
		padding-left: 20px
	&>[data-type=content]
		position relative
		line-height: $lineHeight
		position relative
		display: flex
		align-items: center
		gap 4px
		[data-name=title]
			flex 1
			display: flex
			color: #666
			cursor pointer
			user-select: none
			overflow: hidden
			justify-content: flex-start
			align-items: flex-start
			span
				display: inline-block
				left: 0
				white-space: nowrap;
				text-overflow: ellipsis;
				overflow: hidden;
		.carbon-collapsible__control
			// margin-top: 3px
			color: #aaa
			width 20px
			height: 20px
			display: flex
			align-items: center
			justify-content: center
			padding 0
			border-radius: 4px
			// padding-top 2px
			&:hover
				background: #ddd
				color #666
		.add-child-file
			position absolute
			z-index: 1
			top: 50%
			right: 0
			width: 20px
			height: 20px
			transform: translate(0%, -50%)
			display: flex
			align-items: center
			justify-content: center
			cursor: pointer
			user-select: none
			border-radius: 4px
			color: #aaa
			opacity 0
			font-size: 14px
			&:hover
				background: #ddd
				color #666
	&>[data-type=content]:hover
		.add-child-file
			opacity 1
	.carbon-collapsible__empty
		padding-left 24px
		color: #ccc
		font-size: 14px
		line-height: $lineHeight
		user-select: none

	&[data-open=true] > [data-type=content] > [data-name=title]
		color: #000!important

.carbon-overlay
	position absolute
	height: 100%
	width 100%
