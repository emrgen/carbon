[data-name="hstack"]
	display: flex
	padding: 10px 0
	gap 50px
	// position relative
	> div
		flex 1

[data-name="stack"]
	padding-left 10px
	&:first-child
		padding-left 0px
	// display: flex
	// flex-direction: column
	// gap 2px

[data-name="title"] a
	cursor pointer

[data-name="image"],
[data-name="video"]
	width 100%
	display: flex
	position relative
	margin-top: 8px
	margin-bottom 4px
	// background: #eee
	min-height: 60px
	justify-content: center
	transition: width 0.3s, height 0.3s
	// background #000

[data-name="image"]
	.image-container
		position relative
		cursor: pointer
	img
		width 100%
		user-select: none

.carbon-portal
	position absolute
	top: 0
	left: 0
	width: 100%
	height 100%
	// background #000

.collapsible-empty-content
	user-select: none
	color #aaa
	// background: #eee
	cursor: pointer
	line-height: 32px
	padding 0 6px
	border-radius: 4px
	&:hover
		background: #eee

[data-name="collapsible"][data-collapsed="true"]
	.collapsible-empty-content,
	[data-type="children"]
		display: none

[data-name=quote]
	position relative
	padding: 6px 16px
	margin: 10px 0
	border-left: 3px solid $quoteColor
	// [data-type="content"]
	// 	line-height: $lineHeight
	&[data-as] > [data-type=content]
		padding-top 0
		padding-bottom: 0
	&[data-as] > [data-type=children]
		padding-left 0

[data-name=callout]
	position relative
	padding: 16px 20px
	margin: 10px 0
	background: #FBF3DB
	border: 2px solid #f4d999
	border-radius: 4px
	line-height: $lineHeight
	&[data-as] > [data-type=content]
		padding-top 0
		padding-bottom: 0
	&[data-as] > [data-type=children]
		padding-left 0

[data-name=code]
	display: block
	position relative
	// padding: 16px
	margin: 10px 0
	// background: #eee
	border-radius: 4px
	overflow: hidden
	[data-name=code-content]
		// background #eee
		> [data-name=text]
			white-space: pre-wrap
			word-break: break-all

[data-name=docLink]
	position relative
	cursor pointer
	padding: 0 2px
	margin-top 2px
	&:hover
		background: #eee
		border-radius: 4px
	[data-type="content"]
		padding: 2px 4px
		line-height: $lineHeight
		display: flex
		gap 6px
		[data-name=title]
			font-weight: 500
			padding 0 2px
			span
				border-bottom: 2px solid #ddd

[data-name=table]
	position relative
	margin-top 14px
	margin-bottom: 36px
	.add_table__row
		position absolute
		background: #eee
		height: 20px
		border-radius: 4px
		margin-top 4px
		cursor: pointer
	.add_table__columns
		top: 0
		position absolute
		background: #eee
		width: 20px
		border-radius: 4px
		margin-left 4px
		cursor: pointer
	.add_table__row, .add_table__columns
		// opacity 0
		transition: opacity 0.2s
		&:after
			content: "+"
			position: absolute
			top: 50%
			left: 50%
			transform: translate(-50%, -50%)
			font-size: 16px
			color: #555
			transition: opacity 0.2s
	// &:hover
	// 	.add_table__row, .add_table__columns
	// 		background: #ddd
	// 		opacity: 0.8
	.update_table__row
		position absolute
		background: #eee
		height: 20px
		width: 16px
		left: 0
		top: 50%
		transform: translate(-50%, -50%)
		cursor: pointer
		border-radius: 4px
	table
		border-collapse: collapse;
		border-spacing 0;
		[data-name=row]
			position relative
			outline: none
			border-top: 1px solid #ddd;
			vertical-align top
			&:last-child
				border-bottom: 1px solid #ddd
			[data-name=column]
				text-align: left;
				outline: none
				padding: 7px 9px
				line-height: 22px
				border-left: 1px solid #ddd
				&:last-child
					border-right: 1px solid #ddd

