$selectionHaloColor = #accef78d

.carbon-app
	font-family: Arial, Helvetica, sans-serif
	// position absolute
	position relative
	width: 100%
	padding: 0
	outline none
	// overflow: auto;
	white-space: pre-wrap;

.carbon-content
	padding: 100px 50px

[data-name=document]
	position relative
	outline none
	padding: 20px 100px
	outline: 2px dashed blue;
	.document-content
		max-width: 700px
		margin: 0 auto;

[data-name=document] > [data-type="content"] > [data-name="title"]
	font-size: 36px

[data-name=h1] > [data-type="content"]
	font-size: 26px
[data-name=h2] > [data-type="content"]
	font-size: 24px
[data-name=h3] > [data-type="content"]
	font-size: 18px
[data-name=h4] > [data-type="content"]
	font-size: 16px

[data-name=section]
[data-name=collapsible]
[data-name=bulletedList]
[data-name=numberedList]
[data-name=taskList]
[data-name=collapsibleList]
[data-name=h1]
[data-name=h2]
[data-name=h3]
[data-name=h4]
	// padding: 1px 0
	margin-top 2px
	background rgba(168, 225, 255, 0.316)
	> [data-type=children]
		padding-left 30px
	position relative
	line-height: 30px
	[data-type="content"]
		margin-left: 2px
		// padding: 0 2px
		display: flex
		[data-name=title]
			flex 1

--webkit::spelling-error {
  color: teal!important;
}

span {
	white-space: pre-wrap;
	word-break: break-word;
}
[data-name="divider"]
	outline: none
	position relative
	cursor default
	height: 15px
	margin-bottom: 1px
	caret-color: transparent;
	.divider
		position relative
		top: 7px
		border-bottom: 1px solid rgba(55, 53, 47, 0.184)

.carbon-selection-halo
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	background: $selectionHaloColor
	border-radius: 2px
	pointer-events: none

[data-selected=true]
	caret-color: transparent;

.carbon-collapsible__control
	user-select: none
	position absolute
	left 0
	top 1px
	font-size: 12px
	padding-left 4px
	cursor: pointer
	// background #aaa

[data-name=collapsible]
	> [data-type=children]
		padding-left 0px
	padding-left: 30px
	.carbon-collapsible__control
		left 4px
		width 16px
		height: 30px

[data-name=bulletedList]
	> [data-type=children]
		padding-left: 30px
	// > [data-type=content]
	// 		&:after
	// 			position absolute
	// 			content '●'
	// 			left: 13px
	// 			top 0
	// 			user-select: none
	// 			pointer-events: none
	// 			font-size: 0.8em
	.carbon-bulletedList__label
		padding 0 10px

[data-name=equation]
	position relative
	background #eee
	padding: 16px
	margin-top 2px
	display: flex
	// justify-content: center
	outline: none
	> [data-type=equation-content]
		display: block
		user-select: none
		// text-align: center
		width: 100%
		> *
			user-select: none
	> [data-type=content]
		position absolute
		width: 260px
		min-height: 100px
		top calc(100% + 6px)
		// left 50%
		padding: 16px
		background #fff
		z-index: 1
		box-shadow: 0 0 10px rgba(0,0,0,0.2)
		border-radius: 4px

	.equation-cover
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		cursor pointer
	.carbon-selection-halo[data-active=true]
		background: transparent

.katex
	display: block
	text-align: center
	white-space: nowrap
	.katex-html
		display: block
		position relative

// [data-content-editable="false"]
// 	-webkit-user-modify: read-only;

[data-name="title"]
	position relative
	&:after
		position absolute
		content attr(placeholder)
		left 0
		top 0
		pointer-events: none
		opacity: 0.2
