$selectionHaloColor = #accef78d

.carbon-app
	font-family: Arial, Helvetica, sans-serif
	// position absolute
	position relative
	width: 100%
	padding: 0
	outline none
	// overflow: auto;
	white-space: pre-wrap;

.carbon-content
	padding: 100px 50px

[data-name=document]
	position relative
	outline none
	padding: 20px 100px
	outline: 2px dashed blue;
	.document-content
		max-width: 700px
		margin: 0 auto;

[data-name=document] > [data-type="content"] > [data-name="title"]
	font-size: 36px

[data-name=h1] > [data-type="content"]
	font-size: 26px
[data-name=h2] > [data-type="content"]
	font-size: 24px
[data-name=h3] > [data-type="content"]
	font-size: 18px
[data-name=h4] > [data-type="content"]
	font-size: 16px

[data-name=section]
[data-name=collapsible]
[data-name=bulletedList]
[data-name=numberedList]
[data-name=taskList]
[data-name=collapsibleList]
[data-name=h1]
[data-name=h2]
[data-name=h3]
[data-name=h4]
	// padding: 1px 0
	margin-top 2px
	background rgba(168, 225, 255, 0.316)
	> [data-type=children]
		padding-left 30px
	position relative
	line-height: 30px
	[data-type="content"]
		margin-left: 2px
		// padding: 0 2px
		display: flex
		[data-name=title]
			-webkit-user-modify: read-write;
			flex 1


--webkit::spelling-error {
  color: teal!important;
}

span {
	-webkit-user-modify: read-write;
	white-space: pre-wrap;
	word-break: break-word;
}
[data-name="divider"]
	outline: none
	position relative
	cursor default
	height: 15px
	margin-bottom: 1px
	caret-color: transparent;
	.divider
		position relative
		top: 7px
		border-bottom: 1px solid rgba(55, 53, 47, 0.184)

.carbon-selection-halo
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	background: $selectionHaloColor
	border-radius: 2px
	pointer-events: none

[data-selected=true]
	caret-color: transparent;

.carbon-collapsible__control
	user-select: none
	position absolute
	left 0
	top 1px
	font-size: 12px
	padding-left 4px
	cursor: pointer
	// background #aaa

[data-name=collapsible]
	> [data-type=children]
		padding-left 0px
	padding-left: 30px
	.carbon-collapsible__control
		left 4px
		width 16px
		height: 30px

