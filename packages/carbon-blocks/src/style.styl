$selectionHaloColor = #accef78d
$quoteColor = #555

#root
	position absolute
	width 100%
	height: 100%
	// background #eee

.carbon-app
	font-family: Arial, Helvetica, sans-serif
	position absolute
	// position relative
	// width: 100%
	// padding: 0
	outline none
	// overflow: auto;
	white-space: pre-wrap;
	height: 100%
	width 100%
	// padding: 50px 0px
	// overflow: hidden

.carbon-content
	position absolute
	height: 100%
	width 100%
	// overflow: auto;
	// padding: 0px 50px

[data-name=document]
	overflow: auto;

// .carbon-content
.carbon-header
	position: sticky
	top 10px
	padding: 0px 100px
	height: 30px
	background #fafafa
	display: flex
	align-items: center
	gap 4px
	z-index: 1
	margin-bottom: 12px
	// outline: 2px dashed blue;
	.carbon-control
		// background #000
		padding 4px
		cursor: pointer
		user-select: none
		&:hover
			background #eee

.carbon-park-cursor
	position absolute
	left: 50%
	transform: translateX(-50%)
	z-index: 100
	// position relative

[data-name=document]
	position relative
	outline none
	margin: 10px 0px
	padding: 60px 100px
	outline: 2px dashed blue;
	padding-bottom 200px
	.document-content
		max-width: 700px
		margin: 0 auto;

[data-name=section]
[data-name=collapsible]
[data-name=bulletedList]
[data-name=numberedList]
[data-name=todo]
[data-name=collapsibleList]
[data-name=h1]
[data-name=h2]
[data-name=h3]
[data-name=h4]
	// padding-left: 10px
	// padding: 1px 0
	margin-top 2px
	// background rgba(168, 225, 255, 0.316)
	> [data-type=children]
		padding-left 30px
	position relative
	line-height: 26px
	[data-type="content"]
		// padding-left: 2px
		padding: 2px 0px
		display: flex
		[data-name=title]
			flex 1

--webkit::spelling-error {
  color: teal!important;
}

[data-name=document] > [data-type="content"]
	padding: 20px 0 10px 0
[data-name=document] > [data-type="content"] > [data-name="title"]
	font-size: 40px
	font-weight: bold

[data-name=h1] > [data-type="content"]
	font-size: 30px
	padding-top: 30px
	padding-bottom: 10px
[data-name=h2] > [data-type="content"]
	font-size: 24px
	padding-top: 24px
	padding-bottom: 2px
[data-name=h3] > [data-type="content"]
	font-size: 20px
	padding-top: 20px
	padding-bottom: 2px
[data-name=h4] > [data-type="content"]
	font-size: 16px


span {
	white-space: pre-wrap;
	word-break: break-word;
}
[data-name="divider"]
	outline: none
	position relative
	cursor default
	height: 15px
	margin-bottom: 1px
	caret-color: transparent;
	.divider
		position relative
		top: 7px
		border-bottom: 1px solid rgba(55, 53, 47, 0.184)

.carbon-selection-halo
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	background: $selectionHaloColor
	border-radius: 2px
	pointer-events: none

[data-selected=true]
	caret-color: transparent;

.carbon-collapsible__control
	user-select: none
	// position absolute
	left 0
	top 1px
	// font-size: 12px
	// padding-top 4px
	padding-left 5px
	cursor: pointer
	font-size: 20px
	line-height: 26px

[data-name=collapsible]
	> [data-type=children]
		padding-left 28px
	padding-left: 2px
	.carbon-collapsible__control
		left 4px
		width 22px
		display: flex
		align-items: center

[data-name=bulletedList]
	> [data-type=children]
		padding-left 0px
	padding-left: 30px
	.carbon-bulletedList__label
		padding 0 10px
		user-select: none
		position absolute
		left 0

[data-name=todo]
	position relative
	> [data-type=children]
		padding-left 0px
	padding-left: 30px
	.carbon-todo__control
		padding-right: 4px
		padding-left 2px
		user-select: none
		position absolute
		left 0
		input
			height: 18px
			width: 18px
			margin-top 6px
			&:hover
				cursor: pointer
			// vertical-align: middle

[data-name=numberedList]
	> [data-type=children]
		padding-left 0px
	padding-left: 30px
	.carbon-numberedList__label
		padding 0 10px
		user-select: none
		position absolute
		left 0

[data-name=equation]
	position relative
	background #eee
	padding: 16px
	margin-top 2px
	display: flex
	// justify-content: center
	outline: none
	> [data-type=equation-content]
		display: block
		user-select: none
		// text-align: center
		width: 100%
		> *
			user-select: none
	> [data-type=content]
		position absolute
		width: 260px
		min-height: 100px
		top calc(100% + 6px)
		// left 50%
		padding: 16px
		background #fff
		z-index: 1
		box-shadow: 0 0 10px rgba(0,0,0,0.2)
		border-radius: 4px

	.equation-cover
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		cursor pointer
	.carbon-selection-halo[data-active=true]
		background: transparent

.katex
	display: block
	text-align: center
	white-space: nowrap
	.katex-html
		display: block
		position relative

// [data-content-editable="false"]
// 	-webkit-user-modify: read-only;

[data-name="title"]
	position relative
	&:after
		position absolute
		content attr(placeholder)
		left 0
		top 0
		pointer-events: none
		opacity: 0.2

[data-name="hstack"]
	display: flex
	padding: 10px 0
	> div
		flex 1

[data-name="stack"]
	padding-left 10px
	&:first-child
		padding-left 0px

[data-name="title"] a
	cursor pointer

[data-name="image"]

	position relative
	display: flex
	.image-container
		margin: 10px 0
		width 50%
		position relative
		cursor: pointer
	img
		width 100%
		user-select: none

.carbon-portal
	position absolute
	top: 0
	left: 0
	width: 100%
	height 100%
	// background #000

.collapsible-empty-content
	user-select: none
	color #aaa
	// background: #eee
	cursor: pointer
	line-height: 32px
	padding 0 6px
	border-radius: 4px
	&:hover
		background: #eee

[data-name="collapsible"][data-collapsed="true"]
	.collapsible-empty-content,
	[data-type="children"]
		display: none

[data-name=quote]
	position relative
	padding: 6px 16px
	margin: 10px 0
	border-left: 3px solid $quoteColor
	[data-type="content"]
		line-height: 26px

[data-name=callout]
	position relative
	padding: 16px 20px
	margin: 10px 0
	background: #FBF3DB
	border: 2px solid #f4d999
	border-radius: 4px
	line-height: 26px

[data-name=code]
	display: block
	position relative
	padding: 20px 20px
	margin: 10px 0
	background: #eee
	border-radius: 4px

[data-name=docLink]
	position relative
	cursor pointer
	padding: 0 2px
	margin-top 2px
	&:hover
		background: #eee
		border-radius: 4px
	[data-type="content"]
		padding: 2px 4px
		line-height: 26px
		display: flex
		gap 6px
		[data-name=title]
			font-weight: 500
			padding 0 2px
			span
				border-bottom: 2px solid #ddd

[data-name=table]
	position relative
	margin-top 14px
	margin-bottom: 36px
	.add_table__row
		position absolute
		background: #eee
		height: 20px
		border-radius: 4px
		margin-top 4px
		cursor: pointer
	.add_table__columns
		top: 0
		position absolute
		background: #eee
		width: 20px
		border-radius: 4px
		margin-left 4px
		cursor: pointer
	.add_table__row, .add_table__columns
		// opacity 0
		transition: opacity 0.2s
		&:after
			content: "+"
			position: absolute
			top: 50%
			left: 50%
			transform: translate(-50%, -50%)
			font-size: 16px
			color: #555
			transition: opacity 0.2s
	// &:hover
	// 	.add_table__row, .add_table__columns
	// 		background: #ddd
	// 		opacity: 0.8
	.update_table__row
		position absolute
		background: #eee
		height: 20px
		width: 16px
		left: 0
		top: 50%
		transform: translate(-50%, -50%)
		cursor: pointer
		border-radius: 4px
	table
		border-collapse: collapse;
		border-spacing 0;
		[data-name=row]
			position relative
			outline: none
			border-top: 1px solid #ddd;
			vertical-align top
			&:last-child
				border-bottom: 1px solid #ddd
			[data-name=column]
				text-align: left;
				outline: none
				padding: 7px 9px
				line-height: 22px
				border-left: 1px solid #ddd
				&:last-child
					border-right: 1px solid #ddd

[data-hide-cursor=true]
	caret-color: transparent
	::selection
		background: transparent
.carbon-halo-container
	position absolute
	top: 0

[data-name=carbon]
	display: flex
	gap 10px
	[data-name=document]
		flex 1
		overflow: auto

[data-name=fileTree]
	width 200px
	height: 500px
	background #fafafa
	outline: 2px dashed blue;
	padding: 10px 10px
	margin: 10px 00px 0px 10px
	padding-top 90px

[data-name=fileTreeItem]
	&> [data-type=children]
		padding-left: 20px
	&>[data-type=content]
		position relative
		line-height: 26px
		position relative
		display: flex
		align-items: center
		gap 4px
		[data-name=title]
			flex 1
			display: flex
			color: #666
			cursor pointer
			user-select: none
			// background #000
			overflow: hidden
			justify-content: flex-start
			align-items: flex-start
			span
				// display: flex
				display: inline-block
				left: 0
				white-space: nowrap;
				text-overflow: ellipsis;
				overflow: hidden;
		.carbon-collapsible__control
			// margin-top: 3px
			color: #aaa
			width 20px
			height: 20px
			display: flex
			align-items: center
			justify-content: center
			padding 0
			// padding-top 2px
			&:hover
				background: #eee
				color #666
		.add-child-file
			position absolute
			z-index: 1
			top: 50%
			right: 0
			width: 20px
			height: 20px
			transform: translate(0%, -50%)
			display: flex
			align-items: center
			justify-content: center
			cursor: pointer
			user-select: none
			border-radius: 4px
			color: #aaa
			opacity 0
			font-size: 14px
			&:hover
				background: #eee
				color #666
	&>[data-type=content]:hover
		.add-child-file
			opacity 1
	.carbon-collapsible__empty
		padding-left 24px
		color: #ccc
		font-size: 14px
		line-height: 26px
		user-select: none

	&[data-open=true] > [data-type=content] > [data-name=title]
		color: #000!important

.carbon-overlay
	position absolute
	height: 100%
	width 100%
	background red
