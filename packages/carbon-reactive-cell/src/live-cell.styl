[data-name=liveCell]
  position relative
  margin 10px 0

.reactive-cell-editor-wrapper
  position relative;

.reactive-cell-viewer-wrapper
  position relative;
  z-index 100;
  .reactive-cell-status
    position absolute
    top 2px
    right 0
    bottom 0
    left 2px
    height calc(100% - 4px)
    width 4px
    border-radius 2px
    animation blink 1s infinite
    background #aaa
    visibility hidden
    transition visibility 0.2s ease-in-out

    &.pending
      z-index 1
      visibility visible

@keyframes blink
  0%
    opacity 1
  50%
    opacity 0.3
  100%
    opacity 1

.carbon-reactive-cell-viewer
  min-height 32px
  box-shadow -4px 0 0 0 #ddd inset

.reactive-cell-result
  position relative
  padding 0 12px
  line-height 30px
  font-size 14px
  color #333

.reactive-cell-html-viewer
  // beautiful readable font family, sans
  font-family 'Geist Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  div
    display flex
    flex-direction column


  h1
    font-size 32px
    margin 0
    margin-bottom 6px;
    line-height 1.2 font-weight 500
  h2
    font-size 24px
    margin 0
    margin-bottom 6px;
    font-weight 500
  h3
    font-size 22px
    margin 0
    margin-bottom 6px;
    font-weight 500
  ol
    display: flex
    margin 0
    padding-left 20px
    li
      margin-bottom 4px
  a
    color #0070f3
    text-decoration none
    &:hover
      text-decoration underline


  form
    margin 4px 0
    button
      margin-left 2px
      padding 2px 6px
      font-size 14px
      background #eee
      border 1px solid #aaa
      border-radius 2px
      cursor pointer
      &:hover
        background #ddd

  form > label
    font-weight 500

  form > div,
  form > label + div
    display flex
    flex-direction row
    input[type=number]
      border 1px solid #ccc
      border-radius 4px
      padding 2px 4px
      //margin-right 10px

.cov-function-key
  color #ba3174


.cov-literal
  display flex
  gap 4px

.reactive-cell-error
  padding 0 12px
  color red
  line-height 30px
  font-size 14px

.carbon-cm-container .cm-editor
  background #f5f5f5
  &.cm-focused
    background #f1f6fb

.carbon-monaco-editor
.monaco-editor-container
  resize both
  min-width: 100%;
  min-height: 26px;
