[data-name=liveCell]
  position relative
  margin 10px 0

.carbon-reactive-cell-viewer-content
  max-width 100%
  width 100%

.reactive-cell-editor-wrapper
  position relative;

.reactive-cell-viewer-wrapper
  position relative;
  z-index 100;
  .reactive-cell-status
    position absolute
    top 2px
    right 0
    bottom 0
    left 2px
    height calc(100% - 4px)
    width 4px
    border-radius 2px
    animation blink 1s infinite
    background #aaa
    visibility hidden
    transition visibility 0.2s ease-in-out

    &.pending
      z-index 1
      visibility visible

@keyframes blink
  0%
    opacity 1
  50%
    opacity 0.3
  100%
    opacity 1

.carbon-reactive-cell-viewer
  min-height 32px
  box-shadow -4px 0 0 0 #ddd inset
  display flex
  align-items center

.reactive-cell-result
  position relative
  padding 0 12px
  line-height 30px
  font-size 14px
  color #333

.reactive-cell-html-viewer
  // beautiful readable font family, sans
  font-family 'Geist Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  div
    display flex
    flex-direction column
    width 100%

  figure, table {
    margin: 1rem 0;
  }
  //p, table, figure, figcaption, h1, h2, h3, h4, h5, h6, .katex-display {
  //  max-width: 640px;
  //}

  table
    width: 100%;
    border-collapse: collapse;
    border-color gray
    thead
      border-color inherit
      tr
        border-bottom: solid 1px #ccc;
    th, td {
      padding: 3px 6.5px 3px 0;
      line-height 20px
      font-size 14px
    }
    th {
      color: #111;
      text-align: left;
      vertical-align: bottom;
    }
    tr:not(:last-child) {
      border-bottom: solid 1px #eee;
    }

  blockquote
    display flex
    flex-direction column
    padding 10px 16px;

  h1
    font-size 32px
    margin 0
    margin-bottom 6px;
    line-height 1.2 font-weight 500
  h2
    font-size 24px
    margin 0
    margin-bottom 6px;
    font-weight 500
  h3
    font-size 22px
    margin 0
    margin-bottom 6px;
    font-weight 500
  h4
    font-size 18px
    margin 0
    font-weight 500
  h5
    font-size 16px
    margin 0
    font-weight 500

  ol
    display: flex
    margin 0
    padding-left 20px
    li
      margin-bottom 4px
  a
    color #0070f3
    text-decoration none
    &:hover
      text-decoration underline

  :where(button, input, optgroup, select, textarea)
    line-height normal

  form
    margin 4px 0
    button
      margin-left 2px
      padding 2px 6px
      font-size 14px
      background #eee
      border 1px solid #aaa
      border-radius 2px
      cursor pointer
      &:hover
        background #ddd

  form > label
    font-weight 500
    line-height 20px

  form > div,
  form > label + div
    display flex
    flex-direction row
    input[type=number],
    input[type=search],
    input[type=tel],
    input[type=email],
    input[type=datetime-local],
    input[type=text],
    textarea,
    input
      outline-offset: 0
      border 1px solid #ccc
      border-radius 4px
      padding 2px 4px
      &:focus
        box-shadow none!important
        border 1px solid #000!important
      //margin-right 10px
    textarea
      line-height 26px
      height 60px

.cov-function-key
  color #ba3174


.cov-literal
  display flex
  gap 4px

.reactive-cell-error
  padding 0 12px
  color red
  line-height 30px
  font-size 14px

.carbon-cm-container .cm-editor
  background #f5f5f5
  &.cm-focused
    background #f1f6fb

.carbon-monaco-editor
.monaco-editor-container
  resize both
  min-width: 100%;
  min-height: 26px;
