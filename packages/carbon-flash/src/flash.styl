[data-name=flashCard]
    margin 10px 0
    box-shadow 0 0 2px 0 rgba(0, 0, 0, 0.2)
    padding 10px
    border-radius 4px

    [data-type=content]
        padding-bottom 10px

    .flash-card-content
        color #000
        padding 10px 0
        font-size 14px

    .flash-card-controls
        display flex
        align-items center
        padding 10px 0
        gap 10px

        //small
        button
            font-size 12px
            padding 3px 8px
            border-radius 4px
            border none
            cursor pointer
            background-color #f0f0f0
            color #000
            transition all 0.3s ease

            &:hover
                background-color #e0e0e0
                color #000
