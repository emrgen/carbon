.flash-card--card
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 240px
    height 400px
    border-radius 6px
    box-shadow 0 0 2px 0 rgba(0, 0, 0, 0.2)
    transition all 0.3s ease
    background #fae4e3


    &.flash-card-show-answer
        .flash-card-content
            display none

        .flash-card-controls
            display none

        .flash-card-content[data-name=flashAnswer]
            display flex

    &.flash-card-show-view
        .flash-card-content
            display none

        .flash-card-controls
            display none

        .flash-card-content[data-name=flashView]
            display flex
    .flash-card-view-content
    .flash-card-answer-content
        width 100%
        height 100%
        padding 20px
        text-align center
    .flash-card-view-content
        background #ecf7fe

[data-name=flashView]
    overflow auto

    [data-name=title]:after
        content: ''
    .flash-card-view-content
        > [data-name=title]
            font-size 20px
            font-weight bold
            color #aaa
            margin-bottom 10px
            padding-left 2px

[data-name=flashAnswer]
    overflow auto

    [data-name=title]:after
        content: ''
    .flash-card-answer-content
        > [data-name=title]
            font-size 20px
            font-weight bold
            color #aaa
            margin-bottom 10px
            padding-left 2px

[data-name=flashView]::-webkit-scrollbar {
    width: 8px;
}

[data-name=flashView]::-webkit-scrollbar-thumb {
    background-color: #eee;
    border-radius: 4px;
    border-right 2px solid white;
}

[data-name=flashView]::-webkit-scrollbar-thumb:hover {
    background-color: #ddd;
}

[data-name=flashCard]
    //box-shadow 0 0 2px 0 rgba(0, 0, 0, 0.2)
    padding 30px 0
    border-radius 4px
    margin 30px 0
    background #6dbafa

    .flash-card-content
        color #000
        padding 30px 0
        font-size 14px
        display flex
        justify-content center
        gap 40px

        [data-name=flashView]
            @extend .flash-card--card

        [data-name=flashAnswer]
            @extend .flash-card--card

    .flash-card-controls
        display flex
        align-items center
        padding 10px 0
        gap 10px

        //small
        button
            font-size 12px
            padding 3px 8px
            border-radius 4px
            border none
            cursor pointer
            background-color #f0f0f0
            color #000
            transition all 0.3s ease

            &:hover
                background-color #e0e0e0
                color #000
