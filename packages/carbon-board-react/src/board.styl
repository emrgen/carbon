$selection-color = hsla(213, 82%, 82%, 0.5)


$dot-size = 1px;
$gap-size = 10px;
$dot-color = rgba(100, 100, 100, 0.05);

.sqItem
    border 2px solid transparent
    transition: all 0.3s ease

    &[data-selected=true]
        border 2px solid #555

[data-name=sqCanvas]
    min-height 600px
    background: #f8f8f8
    position: relative;
    cursor: default;
    overflow hidden
    // dotted gradient background
    background-image: radial-gradient($dot-color $dot-size, transparent $dot-size),
        radial-gradient($dot-color $dot-size, transparent $dot-size)
    background-position: 0 0, $gap-size $gap-size
    background-size: $gap-size $gap-size

    [data-selected=true]
        ::selection
            background: $selection-color


.sq-card
    background: #fff
    padding: 10px
    margin: 10px
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1)
    cursor: default
    transition: all 0.3s ease
    min-width: 300px
    width 300px

    &:hover
        box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1)

    &[contentEditable=false]
        user-select none

