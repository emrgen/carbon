.sqItem[data-active=true]
    border -2px solid #555

[data-name=sqNote]
    @extend .sq-card


[data-name=sqBoard]
    position: absolute

    .sq-board-icon
        transition: all 0.3s ease
        width 80px
        height 80px
        border-radius 16px
        background-size 100% 100% !important
        background-color #fff

    .sq-board-icon
        border 2px solid transparent

    &[data-selected=true]
        border 2px solid transparent

        .sq-board-icon
            border 2px solid #555

    [data-untitled=true]
        color #aaa

    .sq-board-header
        position: absolute;
        min-width: 150px;
        //max-width 200px
        transform translateX(-50%)
        left 50%

    .sq-board-title
        margin-top 10px
        font-weight bold
        font-size 16px

    .sq-board-title,
    .sq-board-info
        text-align center

    .sq-board-info
        color #999
        font-size 13px


[data-name=sqColumn]
    position: absolute;
    @extend .sq-card

    &[contenteditable=false]
        user-select none

    &[data-collapsed=true]
        .sq-column-content
            display none

    .sq-column-collapse-button
        position: absolute
        top 10px
        right 10px
        width 14px
        height 14px
        cursor pointer
        font-size 18px
        background-size 100% 100% !important
        display flex
        justify-content center
        align-items center
        user-select none

        &:hover
            background-color #f8f8f8

    .sqItem
        min-width calc(300px - 24px)
        width 100%
        margin 0 !important
        box-shadow 0 0 0 1px #eee

    &:hover
        box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1)

    .sq-column-header
        [data-name=sqTitle]
            text-align center
            font-size 18px
            font-weight 600
            font-family: "Times New Roman", Times, serif

    .sq-column-info
        color #999
        font-size 13px
        text-align center

    .sq-column-content[data-content-empty=false]
        margin-top 10px

    .sq-column-content[data-content-empty=true]
        margin-top: 10px;
        height 60px
        background: #eee;

    .sq-column-content
        [data-type=children]
            display flex
            flex-direction column
            gap 10px

[data-name=sqImage]
    @extend .sq-card

    &:hover
        box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1)

    .sq-image-caption
        padding 20px 4px 10px
        font-size 13px
        color #999

[data-name="sqTitle"]
    position relative
    caret-color #000

    &:after
        position absolute
        content attr(placeholder)
        left 0
        top 0
        pointer-events: none
        user-select none
        opacity: 0.4
        padding-left: 1px;

[data-name=sqHeading]
    @extend .sq-card
    background transparent
    box-shadow none

    &:hover
        box-shadow 0 0 0 1px #ddd

    > div:nth-child(1)
        font-size 24px
        font-weight 600
        font-family: "Times New Roman", Times, serif
        text-align center

        &:after
            width 100%
            text-align center

        &[data-name=h3] > [data-type=content]
            padding-top: 0;
            margin-top: 0;
