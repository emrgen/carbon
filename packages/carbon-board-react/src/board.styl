$selection-color = hsla(213, 82%, 82%, 0.5)

[data-name=sqCanvas]
    min-height 600px
    background: #f8f8f8
    position: relative;
    cursor: default;
    overflow hidden

    [data-selected=true]
        ::selection
            background: $selection-color

[data-name=sqNote]
    &[contentEditable=false]
        user-select none

.sqItem
    border 2px solid transparent


.sqItem[data-selected=true]
    border 2px solid #555


.sqItem[data-active=true]
    border -2px solid #555

[data-name=sqNote]
    background: #fff
    padding: 10px
    margin: 10px
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1)
    cursor: default
    transition: all 0.3s ease
    min-width: 300px
    width 300px

    &:hover
        box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1)


[data-name=sqBoard]
    position: absolute

    .sq-board-icon
        transition: all 0.3s ease
        width 80px
        height 80px
        border-radius 16px
        background-size 100% 100% !important
        background-color #fff

    .sq-board-icon
        border 2px solid transparent

    &[data-selected=true]
        border 2px solid transparent

        .sq-board-icon
            border 2px solid #555

    [data-untitled=true]
        color #aaa

    .sq-board-header
        position: absolute;
        min-width: 150px;
        //max-width 200px
        transform translateX(-50%)
        left 50%

    .sq-board-title
        margin-top 10px
        font-weight bold
        font-size 16px

    .sq-board-title,
    .sq-board-info
        text-align center

    .sq-board-info
        color #999
        font-size 13px


[data-name=sqColumn]
    position: absolute;
    background: #fff
    padding: 10px
    margin: 10px
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1)
    cursor: default
    transition: all 0.3s ease
    min-width: 300px
    width 300px

    &[contenteditable=false]
        user-select none

    &[data-collapsed=true]
        .sq-column-content
            display none

    .sq-column-collapse-button
        position: absolute
        top 10px
        right 10px
        width 14px
        height 14px
        cursor pointer
        font-size 18px
        background-size 100% 100% !important
        display flex
        justify-content center
        align-items center
        user-select none

        &:hover
            background-color #f8f8f8

    .sqItem
        min-width calc(300px - 24px)
        width 100%
        margin 0 !important
        box-shadow 0 0 0 1px #eee

    &:hover
        box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1)

    .sq-column-header
        [data-name=sqTitle]
            text-align center
            font-size 18px
            font-weight 600
            font-family: "Times New Roman", Times, serif

    .sq-column-info
        color #999
        font-size 13px
        text-align center

    .sq-column-content[data-content-empty=false]
        margin-top 10px

    .sq-column-content[data-content-empty=true]
        margin-top: 10px;
        height 60px
        background: #eee;

    .sq-column-content
        [data-type=children]
            display flex
            flex-direction column
            gap 10px
