[data-name=sqBoard]
    min-height 300px
    background: #f8f8f8
    position: relative;
    cursor: default;

[data-name=sqNote]
    position: absolute;
    background: #fff
    border: 1px solid #ddd
    border-radius: 3px
    padding: 10px
    margin: 10px
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1)
    cursor: pointer
    transition: all 0.3s ease
    min-width: 300px
    width 300px

    &:hover
        box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1)
