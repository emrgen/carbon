[data-name=sqBoard]
    min-height 300px
    background: #f8f8f8
    position: relative;
    cursor: default;

.sqItem
    border 2px solid transparent

.sqItem[data-selected=true]
    border 2px solid #555


.sqItem[data-active=true]
    border -2px solid #555

[data-name=sqNote]
    position: absolute;
    background: #fff
    padding: 10px
    margin: 10px
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1)
    cursor: default
    transition: all 0.3s ease
    min-width: 300px
    width 300px

    &:hover
        box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1)
