[data-name=cell]
    width 100%
    //display flex
    flex-direction column
    //gap 2px
    //margin 10px 0
    margin 22px 0


    [data-name=codeMirror]
        margin 0
        border-radius 0!important
    [data-name=cellView]
        min-height 34px
        background #fff
        border 1px solid #eee
        z-index 100

.carbon-cell-container
    display flex
    flex-direction row
    gap 2px
    position: relative;
    z-index 1
    &:hover .carbon-cell-handle
        opacity 1
        z-index 2
        //.carbon-cell-insert-before,
        //.carbon-cell-insert-after
        //    z-index 3


.carbon-cell-handle
    opacity 0
    position: absolute;
    top 0
    right 100%
    height 100%
    width: 20px;
    //margin-right: 3px;
    border-right 2px solid #fff
    transition opacity 0.2s
    background #eee
    color #aaa
    text-align center
    cursor pointer
    border-radius 4px
    .carbon-cell-insert-before,
    .carbon-cell-insert-after
        position: absolute;
        width 18px
        height 18px
        background: #eee;
        border-radius 4px
        cursor pointer
        left 0
        z-index 1
        &:hover
            background: #ddd

    .carbon-cell-insert-after
        top calc(100% + 2px)
    .carbon-cell-insert-before
        bottom calc(100% + 2px)

.carbon-cell-insert-before
    border-radius 4px
    background: rgba(238, 238, 238, 0.75);
    cursor pointer
    text-align center
    color #aaa
    font-size 14px
    user-select none

.carbon-cell-view
    flex 1
    display flex
    flex-direction column
    border-radius 4px
    overflow hidden
