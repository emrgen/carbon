$active-cell-color = #dde6f1

[data-name=cell]
    width 100%
    //display flex
    flex-direction column
    //gap 2px
    //margin 10px 0
    margin 22px 0

    .cell-code-wrapper
        flex 1
        position relative;
        border-radius 6px
        [data-name=codeMirror]
            margin 0
            border-radius 0!important

    [data-name=cellView]
        min-height 34px
        background #fff
        z-index 100
        flex 1
    .cm-editor
        background #ededed
        border-radius 4px
        padding 0 0 0 0!important
        &.cm-focused
            background $active-cell-color
    &[data-focused=true]
        .cm-editor
            background $active-cell-color

.carbon-cell-container
    display flex
    flex-direction column
    gap 2px
    position: relative;
    z-index 1
    &:hover .carbon-cell-handle
        opacity 1
        z-index 2

.carbon-cell-handle[data-focused=true]
    opacity 1
    z-index 2

.cell-view-handle
    padding-top 6px;
    user-select none
.cell-code-handle
    padding-top 3px;
    user-select none

.carbon-cell-handle
    position absolute;
    opacity 0
    top 0
    height 100%
    right 100%
    width: 20px;
    display flex;
    //margin-right: 3px;
    border-right 2px solid #fff
    transition opacity 0.2s
    background #eee
    color #aaa
    text-align center
    justify-content center
    cursor pointer
    border-radius 4px
    &:hover
        background: #ddd
    .cell-code-handle
        flex 1
    .carbon-cell-insert-before,
    .carbon-cell-insert-after
        position: absolute;
        display flex
        width 18px
        height 18px
        background: #eee;
        border-radius 4px
        cursor pointer
        left 0
        justify-content center
        align-items center
        z-index 1
        &:hover
            background: #ddd

    .carbon-cell-insert-after
        top calc(100% + 2px)
        z-index 10
    .carbon-cell-insert-before
        top -20px
        z-index 5

.carbon-cell-insert-before
    border-radius 4px
    background: rgba(238, 238, 238, 0.75);
    cursor pointer
    text-align center
    color #aaa
    font-size 14px
    user-select none

.carbon-cell-view
    display flex
    flex-direction row
    border-radius 4px
    position relative;
    width 100%;
.carbon-cell-code
    position relative;
    display flex
    width 100%;

.carbon-cell-compute-button
    position absolute;
    right 4px
    top 3px
    z-index 100
    border-radius 4px
    padding 4px
    cursor pointer
    color #aaa
    &:hover
        color #000
.cell-view
    padding 6px 10px
    h1
        margin 0
        font-size 20px
        font-weight 500
    h2
        margin 0
        font-size 16px
        font-weight 500