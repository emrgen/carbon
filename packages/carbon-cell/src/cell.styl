[data-name=cell]
    width 100%
    //display flex
    flex-direction column
    //gap 2px
    //margin 10px 0
    margin 10px 0


    [data-name=codeMirror]
        margin 0
        border-radius 0!important
    [data-name=cellView]
        min-height 34px
        background #fff
        border 1px solid #eee
        z-index 100

.carbon-cell-container
    display flex
    flex-direction row
    gap 2px

.carbon-cell-handle
    width: 22px;
    border-radius 4px
    background: rgba(238, 238, 238, 0.75);
    cursor pointer
    text-align center
    color #aaa
    //padding-top: 3px;
    font-size 14px

.carbon-cell-view
    flex 1
    display flex
    flex-direction column
    border-radius 4px
    overflow hidden
