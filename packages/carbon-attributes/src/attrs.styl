[data-name=attributes]
    display flex
    flex-direction column
    //background: #f4f4f4
    padding: 16px 0
    margin 26px 16px 26px
    gap 6px

[data-name=attributes] [data-name=attribute]
    display: flex
    padding: 0 4px
    gap 5px

    .carbon-attribute-label
        display flex
        cursor: pointer
        //background red
        align-items center
        padding: 0 4px
        border-radius: 4px
        gap 4px

        &:hover
            background: #f4f4f4

        .carbon-attribute-type
            margin-right: 4px
            width 24px
            height 24px
            background: #eee
            display flex
            justify-content center
            align-items center

        .carbon-attribute-name
            padding 4px 0
            margin-right: 4px
            width 140px
            color #999

    .carbon-attribute-value-wrapper
        display flex
        align-items center
        flex 1
        height 34px
        border-radius 4px

        &:hover
            background: #f4f4f4

        .carbon-attribute-value
            width: 100%;

            .carbon-attribute-date-text
                padding 0 12px

            input[type=text]
            input[type=number]
            input[type=email]
                padding: 4px 12px
                border-radius: 4px
                width 100%
                font-size 15px
                color #333
                outline none
                border none
                background transparent
