
.carbon-document-attrs
	// background: #f4f4f4
	padding: 16px 0px
	user-select: none

.carbon-attrs
	display flex
	gap: 10px

.carbon-attrs-name
	width 180px
	display flex
	align-items: center
	justify-content: start
	padding: 6px 4px
	border-radius: 4px
	cursor pointer
	color: #999
	&:hover
		background: #eee

	&>span
		display: inline-block
		white-space: nowrap;
		text-overflow: ellipsis;
		overflow: hidden;

.carbon-attrs-values
	display flex
	gap 6px
	font-size: 14px
	align-items: center

	.carbon-tag-attr
		display: flex
		align-items: center
		justify-content: center
		padding: 2px 4px
		border-radius: 4px
		background: rgba(0, 128, 128, 0.178)
		height: 18px
		cursor pointer
		&:hover
			background: #ccc
		&>span
			display: inline-block
			white-space: nowrap;
			text-overflow: ellipsis;
			overflow: hidden;
		&>input
			width 100%
			border: none
			outline: none
			background: transparent
			&:focus
				background: #ddd

.carbon-add-prop
	padding: 6px 4px
	margin: 4px 0
	cursor: pointer
	user-select: none
	width 180px
	color: #999
	&:hover
		background: #eee
