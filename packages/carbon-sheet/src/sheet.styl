
.carbon-sheet
  position absolute
  width: 100%
  height: 100%
  overflow: hidden

.carbon-sheet-viewport
  position relative
  min-width: 100%
  min-height: 100%
  overflow: scroll

.carbon-sheet-size
  position absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden

.carbon-sheet-canvas
  position absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden

.carbon-sheet-left-top-cell
  position absolute
  left: 0
  top: 0
  width: 49px
  height: 25px
  background: #fff
  z-index: 100
