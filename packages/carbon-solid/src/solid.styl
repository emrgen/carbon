$selectionHaloColor = #accef78d

.carbon-app
  font-family: Arial, Helvetica, sans-serif
  margin: 0 auto
  outline none
  white-space: pre-wrap;
  width 100%
  flex: 1

[data-name=title]
  line-height 28px

[data-name=document]
  > [data-name=title]
    font-size: 2em
    font-weight: bold
    margin: 0.67em 0
    padding: 0
    line-height 36px

[data-name=paragraph]
[data-name=bulletList]
[data-name=numberList]
  margin-top: 1px;

  > [data-name=paragraph],
  > [data-name=bulletList]
  > [data-name=numberList]
    margin-left: 30px;

[data-name=h1] > [data-name=title]
  font-size: 2em
  font-weight: bold
  margin: 0.67em 0
  padding: 0


[data-name=h2] > [data-name=title]
  font-size: 1.5em
  font-weight: bold
  margin: 0.83em 0
  padding: 0

[data-name=h3]
  font-size: 1.17em
  font-weight: bold
  margin: 1em 0
  padding: 0

[data-name=h4]
  font-size: 1em
  font-weight: bold
  margin: 1.33em 0
  padding: 0

[data-name=divider]
  position: relative
  margin 0.3em 0

  &:after
    position: absolute;
    content: ""
    top 50%
    display: block
    width: 100%;
    height: 1px
    background: #ccc

[data-name=bulletList]
  > [data-name=title]
    :before
      content: 'â€¢ '
      font-size: 1.2em
      line-height: 0.5em
      margin-right: 0.3em
      margin-left: 0.7em;
      vertical-align: middle

