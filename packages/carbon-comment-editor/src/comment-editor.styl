.carbon-comment-editor
    position: relative;
    cursor text
    height 100%
    flex 1
    //padding 10px 0px
    border-radius 4px
    box-shadow 0 0 0 1px #eee
    margin 10px 0

    &:focus-within
        box-shadow inset 0 0 0 2px rgba(25, 76, 209, 0.6)
        outline none

[data-name="commentEditor"]
    position: relative;
    //border-radius 4px
    min-height 100px
    display flex
    flex-direction column
    padding 10px
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px

    &[data-empty=true]:after
        position: absolute;
        content: "hello"
        position: absolute
        bottom: 0
        left: 0
        right: 0
        top 0
        margin: 10px
        color #aaa
        user-select none

    &:focus-within
        box-shadow inset 0 0 0 1px rgba(25, 76, 209, 0.6)
        outline none

        &:after
            display none


    [data-type="content"]
        [data-name]
            margin-top: 0;

            > [data-type=content]
                margin-top: 0;

.carbon-comment-editor-toolbar
    position: relative;
    display flex
    padding 4px 6px
    user-select none
    cursor default
    margin 2px
    top 2px
    border-top-left-radius 4px
    border-top-right-radius 4px
    background-color #f5f5f5
    color #aaa
    gap 1px
    //justify-content end

    &[data-focused=true]
        background-color #f5f5f5
        //border-bottom 1px solid #eee
        color #555

    button
        font-size 12px
        padding: 1px 6px;
        border-radius 2px
        //color #aaa
        min-width 22px

        &:hover
            color: #555

