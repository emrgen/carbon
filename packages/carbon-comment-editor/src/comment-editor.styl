[data-name="commentEditor"]
  position: relative;
  user-select contain
  box-shadow 0 0 0 1px #eee
  border-radius 4px
  padding 10px 10px
  margin 10px 0
  min-height 100px

  &:focus-within
    box-shadow 0 0 0 1px #0078FF
    outline none
    background: red;

  [data-type="content"]
    [data-name]
      margin-top: 0;
      > [data-type=content]
        margin-top: 0;

