.inline-style-bold
    font-weight bold

.inline-style-italic
    font-style italic

.inline-style-underline
    text-decoration underline

.inline-style-strike
    text-decoration line-through

.inline-style-code
    font-family monospace
    background-color #f5f5f5

.inline-style-bold,
.inline-style-italic,
.inline-style-underline,
.inline-style-strike,
.inline-style-code
    &[data-active=true]
        background #aaa

