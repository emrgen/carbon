
// tabs
.ctabs
  position: relative;
  border-radius 4px
  box-shadow 0 0 0 1px #eee
  overflow: hidden
  margin 16px 0

.ctab__content
  padding 6px 9px
  background: #fff
  min-height 100px

.ctabs__header
  display flex
  align-items center
  padding 6px 8px
  //height 34px
  background #fdfdfd
  border-bottom 1px solid #ddd

.ctab__names
  display flex
  background: #ECF0F2
  font-size 14px
  border-radius 4px
  gap 4px
  box-shadow 0 0 0 1px #ECF0F2
  margin-right: 6px;

.ctab__header
  cursor pointer
  border-radius 4px
  background: #ECF0F2
  box-shadow 0 0 0 1px #ECF0F2
  position relative

  &[data-active=true]
    background: #fff

.ctab__name
  padding 2px 10px


.ctab__name-input
  position absolute
  top 0
  width 100%
  height 100%
  .data-editable
    z-index 100

input
  width: 100%;
  height 100%
  padding 2px 10px
  display inline-block
  border-radius 4px
