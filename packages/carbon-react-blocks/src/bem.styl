@import "bem_tabs.styl"

$lineHeight = 26px
$selectionHaloColor = #accef78d

.croot
  width: 100%;

  ::selection
    background: $selectionHaloColor

.cdoc
  flex 1
  padding 0 80px
  padding-top: 40px;

// text
#ct
  white-space pre-wrap

// block
.bullet-list
.cnl
.ctdl
.cse
  margin-top 2px
  position relative;
  line-height: $lineHeight

// document title
.cdoc > .title
  font-size 2.5em
  font-weight bold
  line-height 40px
  margin-bottom 20px
.document > .cnest
  margin-left 0

//title
.cse__ti
.bullet-list
.todo
.collapsible__ti
.ccout__ti
.ch1__ti
.ch2__ti
.ch3__ti
.ch4__ti
  flex 1
  padding 0 2px
  .title
    flex 1
    padding 0 2px

//position: relative

// placeholder
.placeholder
  position absolute
  content attr(placeholder)
  left 0
  top 0
  pointer-events: none
  user-select none
  opacity: 0.4
  padding-left: 1px;

.section > .title:after
  @extend .placeholder

// placeholder end

// title wrapper
.ctiw
  line-height $lineHeight
  display: flex
  align-content: flex-start

// nested children
.cnest
  margin-left 26px

// bullet list
.bullet-list > .ctiw > .title
  margin-left: 26px

.bullet-list > .ctiw > .title:after
  @extend .placeholder
  left 28px

.bullet-list__marker
  padding 0 8px
  user-select: none
  position absolute
  left 0
  font-size 0.6em

// todo list
.todo > .ctiw > .title
  margin-left: 26px
  flex 1

.todo > .ctiw > .title:after
  @extend .placeholder
  left 28px

.todo__checkbox
  display flex
  padding 6px 6px
  position absolute;

.cnl__ti
  margin-left: 28px
  flex 1

.cnl__label
  width 28px;
  display flex
  justify-content end
  padding-right 8px;
  user-select: none
  position absolute;

.collapsible > .ctiw > .title
  margin-left: 28px
  flex 1

.collapsible__control
  display flex
  position absolute;
  padding 6px 2px
  margin 0 2px
  cursor pointer
  border-radius 6px

  &:hover
    background #f5f5f5

.collapsible[data-collapsed="true"]
  .cnest
  .collapsible-empty-content
    display none

// callout
.ccout
  background: #FBF3DB;
  padding: 10px 16px
  border-radius 4px
  box-shadow 0 0 0 2px #f4d999 inset
  margin: 10px 0

// divider
.cdiv
  outline: none
  position relative
  cursor default
  height: 15px
  margin-bottom: 1px
  caret-color: transparent;

.cdiv__line
  position relative
  top: 7px
  height: 2px
  width: 100%
  background: #eee

// divider end

// header
.ch1
  margin-top 0.8em
  margin-bottom 0.3em

.ch2
  margin-top 0.7em
  margin-bottom 0.3em

.ch3
  margin-top 0.6em
  margin-bottom 0.3em

.ch4
  margin-top 0.6em
  margin-bottom 0.3em

.ch1__ti
  font-size: 2.2em
  font-weight: bold
  line-height: 1.2em

.ch2__ti
  font-size: 1.6em
  font-weight: bold
  line-height: 1.2em

.ch3__ti
  font-size: 1.4em
  font-weight: bold
  line-height: 1.2em

.ch4__ti
  font-size: 1.2em
  font-weight: bold
  line-height: 1.2em

// header end

// code
pre
  white-space pre-wrap
  font-size 0.9em
  line-height 1.5em
  padding 10px
  margin 0
  background #f8f8f8
  border-radius 4px
  border 1px solid #ddd

// code end

.collapsible[data-as="h1"]
  margin-top 0.8em;

  .collapsible__ti
    @extend .ch1__ti

  .collapsible__control
    font-size 1.3em
    margin-top 6px;

.collapsible[data-as="h2"]
  margin-top 0.6em;

  .collapsible__ti
    @extend .ch2__ti

  .collapsible__control
    font-size 1.1em
    margin-top 2px;

.collapsible[data-as="h3"]
  margin-top 0.6em;

  .collapsible__ti
    @extend .ch3__ti

  .collapsible__control
    font-size 1.1em

.collapsible[data-as="h4"]
  margin-top 0.6em;

  .collapsible__ti
    @extend .ch4__ti

  .collapsible__control
    font-size 1em
    margin-top -2px;

.mention
  background: #efefef
  padding: 2px 0
  border-radius: 8px
  margin: 0 2px
  cursor pointer

/*custom scrollbars for document*/
.document-wrapper::-webkit-scrollbar {
  width: 10px;
  background-color: #f5f5f5;
}

/*thumb radius*/
.document-wrapper::-webkit-scrollbar-thumb {
  background-color: #aaa;
  border-radius: 10px;
}

.empty-zero-width-space
  font-stretch expanded