$lineHeight = 26px

.croot

.cdoc
  flex 1
  padding 0 80px
  padding-top: 40px;

#ct
  white-space pre-wrap

// block
.cbl
.cse
  margin-top 2px
  position relative;
  line-height: $lineHeight

// document title
.cdoc__ti
  font-size 2.5em
  font-weight bold
  line-height 40px
  margin-bottom 20px

//title
.cse__ti
.cbl__ti
.ccout__ti
.ch1__ti
.ch2__ti
.ch3__ti
.ch4__ti
  padding 0 2px
  //flex 1

// title wrapper
.ctiw
  line-height $lineHeight
  display: flex
  align-content: flex-start

// nested children
.cnest
  margin-left 20px

// bullet list
.cbl
  padding-left: 30px

.cbl__marker
  padding 0 10px
  user-select: none
  position absolute
  left 0

.ccout
  background: #FBF3DB;
  padding: 10px 16px
  border-radius 4px
  box-shadow 0 0 0 2px #f4d999 inset
  margin: 10px 0

// divider
.cdiv
  outline: none
  position relative
  cursor default
  height: 15px
  margin-bottom: 1px
  caret-color: transparent;

.cdiv__line
  position relative
  top: 7px
  height: 2px
  width: 100%
  background: #eee
// divider end

// header
.ch1
  margin-top 0.67em
  margin-bottom 0

.ch1__ti
  font-size: 2em
  font-weight: bold
  line-height: 1.2em

.ch2__ti
  font-size: 1.6em
  font-weight: bold
  line-height: 1.2em

.ch3__ti
  font-size: 1.4em
  font-weight: bold
  line-height: 1.2em

.ch4__ti
  font-size: 1.2em
  font-weight: bold
  line-height: 1.2em
// header end