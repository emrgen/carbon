@import "bem_tabs.styl"

$lineHeight = 28px
$selectionHaloColor = #accef78d

.croot
  width: 100%;

  ::selection
    background: $selectionHaloColor
.document-wrapper
  overflow auto
  background #fff

.cdoc
  flex 1
  padding 0 calc(50% - 400px)
  padding-top: 40px;
  > div
    scroll-margin-bottom 100px

// text
#ct
  white-space pre-wrap

// block
.bullet-list
.number-list
.todo
.collapsible
.callout
.paragraph
  margin-top 2px
  position relative;
  line-height: $lineHeight

// document title
.cdoc > .title
  font-size 2.5em
  font-weight bold
  line-height 40px
  margin-bottom 20px

.document > .cnest
  margin-left 0

//title
.bullet-list
.number-list
.todo
.collapsible
.callout
  > .ctiw > .title
    flex 1
    padding 2px
.paragraph > .title
  flex 1
  padding 2px

// placeholder
.placeholder
  position absolute
  content attr(placeholder)
  left 0
  top 0
  pointer-events: none
  user-select none
  opacity: 0.4
  padding-left: 1px;

// title wrapper
.ctiw
  line-height $lineHeight
  display: flex
  align-content: flex-start

// nested children
.cnest
  margin-left 26px

// section
.paragraph > .title:after
  @extend .placeholder

// bullet list
.bullet-list > .ctiw > .title
  margin-left: 26px

.bullet-list > .ctiw > .title:after
  @extend .placeholder

.bullet-list__marker
  line-height $lineHeight
  padding 3px 8px
  user-select: none
  position absolute
  left 0
  font-size 0.6em

// todo list
.todo > .ctiw > .title
  margin-left: 26px
  flex 1

.todo > .ctiw > .title:after
  @extend .placeholder
  //left 26px

.todo__checkbox
  display flex
  padding 8px 6px
  position absolute;

.collapsible > .ctiw > .title
  margin-left: 26px
  flex 1

.collapsible > .ctiw > .title:after
  @extend .placeholder
  left 26px

.collapsible__control
  display flex
  position absolute;
  padding 6px 2px
  margin 0 2px
  cursor pointer
  border-radius 6px

  &:hover
    background #f5f5f5

.collapsible[data-collapsed="true"]
  .cnest
  .collapsible-empty-content
    display none

.cnl__ti
  margin-left: 28px
  flex 1

.cnl__label
  width 28px;
  display flex
  line-height 30px
  justify-content end
  padding-right 8px;
  user-select: none
  position absolute;


// callout
.callout
  background: #FBF3DB;
  padding: 10px 16px
  border-radius 4px
  box-shadow 0 0 0 2px #f4d999 inset
  margin: 10px 0
  > [data-name=title]
    padding-left 2px;
  > .cnest
    margin-left 0px
    > .number-list
      padding-left 0;
// divider
.cdiv
  outline: none
  position relative
  cursor default
  height: 15px
  margin-bottom: 1px
  caret-color: transparent;

.cdiv__line
  position relative
  top: 7px
  height: 2px
  width: 100%
  background: #eee

// divider end

// header
.h-1
  margin-top 0.8em
  margin-bottom 0.3em

.h-2
  margin-top 0.7em
  margin-bottom 0.3em

.h-3
  margin-top 0.6em
  margin-bottom 0.3em

.h-4
  margin-top 0.6em
  margin-bottom 0.3em

.h1__title
  font-size 2.2em
  font-weight bold
  line-height 1.2em
  margin-top 0.6em;

.h-1 > .title
  @extend .h1__title

.h2__title
  font-size: 1.6em
  font-weight: bold
  line-height: 1.2em
  margin-top 0.6em;

.h-2 > .title
  @extend .h2__title

.h3__title
  font-size: 1.4em
  font-weight: bold
  line-height: 1.2em

.h-3 > .title
  @extend .h3__title

.h4__title
  font-size: 1.2em
  font-weight: bold
  line-height: 1.2em

.h-4 > .title
  @extend .h4__title

// header end

// code
pre
  white-space pre-wrap
  font-size 0.9em
  line-height 1.5em
  padding 10px
  margin 0
  background #f8f8f8
  border-radius 4px
  border 1px solid #ddd

// code end

.collapsible[data-as="h1"]
  margin-top 0.8em;

  .ctiw > .title
    @extend .h1__title
    margin-bottom 0.1em;

  .collapsible__control
    font-size 1.3em
    margin-top 6px;

.collapsible[data-as="h2"]
  margin-top 0.6em;

  .ctiw > .title
    @extend .h2__title
    margin-bottom 0.1em;

  .collapsible__control
    font-size 1.1em
    margin-top 2px;

.collapsible[data-as="h3"]
  margin-top 0.6em;

  .ctiw > .title
    @extend .h3__title

  .collapsible__control
    font-size 1.1em

.collapsible[data-as="h4"]
  margin-top 0.6em;

  .ctiw > .title
    @extend .h4__title

  .collapsible__control
    font-size 1em
    margin-top -2px;

.mention
  background: #efefef
  padding: 2px 0
  border-radius: 8px
  margin: 0 2px
  cursor pointer

/*custom scrollbars for document*/
.document-wrapper::-webkit-scrollbar {
  width: 10px;
  background-color: #f5f5f5;
}

/*thumb radius*/
.document-wrapper::-webkit-scrollbar-thumb {
  background-color: #aaa;
  border-radius: 10px;
}

.empty-zero-width-space
  font-stretch expanded

[data-name=button][data-size=lg] .carbon-button
  font-size 1.1em
  padding 0.5em 1em

[data-name=plainText]
  display flex
  justify-content center
  text-align center
  &:after
    content: attr(placeholder)
    color white
    opacity 0.5
    user-select none
    z-index 1
    pointer-events none
