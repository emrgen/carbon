@import "bem_tabs.styl"

$lineHeight = 26px

.croot
  width: 100%;

.cdoc
  flex 1
  padding 0 80px
  padding-top: 40px;

// text
#ct
  white-space pre-wrap

// block
.cbl
.cnl
.ctdl
.cse
  margin-top 2px
  position relative;
  line-height: $lineHeight

// document title
.cdoc__ti
  font-size 2.5em
  font-weight bold
  line-height 40px
  margin-bottom 20px

//title
.cse__ti
.cbl__ti
.cnl_ti
.ctdl_ti
.ccout__ti
.ch1__ti
.ch2__ti
.ch3__ti
.ch4__ti
  flex 1
  padding 0 2px

  //position: relative

// placeholder
.placeholder
  position absolute
  content attr(placeholder)
  left 0
  top 0
  pointer-events: none
  user-select none
  opacity: 0.4
  padding-left: 1px;

.cse__ti:after
  @extend .placeholder

.cbl__ti:after
  @extend .placeholder
  left 28px

.cnl__ti:after
  @extend .placeholder
  left 28px

.ctdl__ti:after
  @extend .placeholder
  left 28px

// placeholder end

// title wrapper
.ctiw
  line-height $lineHeight
  display: flex
  align-content: flex-start

// nested children
.cnest
  margin-left 26px

// bullet list
.cbl__ti
  margin-left: 28px

.cbl__marker
  padding 0 10px
  user-select: none
  position absolute
  left 0
  font-size 0.75em

// todo list
.ctdl__ti
  margin-left: 28px
  flex 1

.ctdl__checkbox
  display flex
  padding 6px 7px
  position absolute;

.cnl__ti
  margin-left: 28px
  flex 1

.cnl__label
  width 28px;
  display flex
  justify-content end
  padding-right 8px;
  user-select: none
  position absolute;

// callout
.ccout
  background: #FBF3DB;
  padding: 10px 16px
  border-radius 4px
  box-shadow 0 0 0 2px #f4d999 inset
  margin: 10px 0

// divider
.cdiv
  outline: none
  position relative
  cursor default
  height: 15px
  margin-bottom: 1px
  caret-color: transparent;

.cdiv__line
  position relative
  top: 7px
  height: 2px
  width: 100%
  background: #eee

// divider end

// header
.ch1
  margin-top 0.8em
  margin-bottom 0.3em

.ch2
  margin-top 0.7em
  margin-bottom 0.3em

.ch3
  margin-top 0.6em
  margin-bottom 0.3em

.ch4
  margin-top 0.6em
  margin-bottom 0.3em

.ch1__ti
  font-size: 2.2em
  font-weight: bold
  line-height: 1.2em

.ch2__ti
  font-size: 1.6em
  font-weight: bold
  line-height: 1.2em

.ch3__ti
  font-size: 1.4em
  font-weight: bold
  line-height: 1.2em

.ch4__ti
  font-size: 1.2em
  font-weight: bold
  line-height: 1.2em

// header end

// code
pre
  white-space pre-wrap
  font-size 0.9em
  line-height 1.5em
  padding 10px
  margin 0
  background #f8f8f8
  border-radius 4px
  border 1px solid #ddd
// code end

/*custom scrollbars for document*/
.document-wrapper::-webkit-scrollbar {
  width: 10px;
  background-color: #f5f5f5;
}

/*thumb radius*/
.document-wrapper::-webkit-scrollbar-thumb {
  background-color: #aaa;
  border-radius: 10px;
}