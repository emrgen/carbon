[data-name=tab]:has([data-focused])
[data-name=frame]:has([data-focused])
    box-shadow inset 0 0 0 1px rgba(25, 76, 209, 0)

[data-empty=true]
    background: #aaa;
    width 10px
    display inline-block

.carbon-code
    background: #eee
    padding: 2px 4px
    border-radius: 4px
    margin 0 4px

.carbon-bold
    font-weight: bold
.carbon-italic
    font-style: italic
.carbon-underline
    text-decoration: underline

[data-name=hint]
    position: relative;
    border-radius 4px
    overflow hidden
    box-shadow inset 0 0 0 2px #eee
    &[contenteditable=false]
        user-select none
        > [data-type=content]
            cursor pointer
    > [data-type=content]
        position: relative;
        padding 10px
        line-height: $lineHeight
        display flex
        background: #eee;
        font-weight bold
        color #555
        > [data-name=title]
            posrtion: relative
            flex 1
        > .carbon-hint__viewe
            background: #aaa
            color: #fff
            padding: 0 4px
            border-radius: 4px
            margin-right: 4px

        > .carbon-hint__viewed,
        > .carbon-hint__control
            padding-right 6px
            cursor: pointer
            user-select: none
            display flex
            align-items: center
            justify-content: center
            border-radius 4px
            transform scale(1.1)
            &:hover
                background: #eee;
                transition background 0.3s
    > [data-type=children]
        padding 10px
    &[data-collapsed=true]
        > [data-type=children]
            display: none

    .hint-insert-section
        padding 10px
        color #aaa
        cursor pointer
        user-select none
        &:hover
            color #555



[data-name=hint]
    margin-bottom 14px
    margin-top: 10px;

[data-name=hint] + [data-name=hint]
        margin-top 4px
[data-name=hint]:has(+ [data-name=hint])
        margin-bottom 4px

[data-name=mcq]
    position: relative;
    margin-bottom: 14px;
    margin-top: 10px;
    background: #eee;
    padding 10px
    border-radius 4px

    > [data-type=content]
        line-height: $lineHeight
        display flex
        font-weight bold
        color #555

        > [data-name=title]
            posrtion: relative
            flex 1
            gap 4px
        > .carbon-mcq__control
            margin-left: 2px;
            margin-right: 8px;
            display flex
            cursor pointer
            align-items center
            > .mcq-control-wrapper
                position: relative;
                border-radius 4px
                width: 16px;
                height: 16px;
                display flex
                justify-content center
                box-shadow 0 0 0 1px #aaa;
                background: #fff;
                input
                    opacity: 0;
                .mcq-selected-hint
                    position: absolute;
                    width: 10px;
                    height: 10px;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    background: #aaa
                    border-radius 3px
                    display none
                    box-shadow inset 0 0 0 1px #aaa;
                &[data-checked=true]
                    font-size: 18px;
                    font-weight: bold;
                    //background: #666;
                    .mcq-selected-hint
                        display flex

    > [data-type=children]
        padding-left 24px

// add margin to mcq with previous mcq
[data-name=mcq] + [data-name=mcq]
    margin-top 4px

[data-name=mcq]:has(+ [data-name=mcq])
    margin-bottom 4px

[data-name=question]
    position: relative;
    > [data-type=content]
        display inline-flex
        font-weight bold
        font-size 22px
        [data-name=title]
            position inherit
            //flex 1
            gap 4px
        [data-required=true]
            //user-select none
            color red
            &:after
                content "*"
                color red
                margin-left 4px
    > [data-type=children]
        padding-left 24px

[data-name=scale]
    display flex
    gap 10px
    margin-top 10px
    margin-bottom: 10px
    .carbon-scale-option
        padding 0 6px
        min-width 36px
        height 36px
        box-shadow inset 0 0 0 2px #eee
        justify-content center
        align-items center
        text-align center
        line-height 36px
        border-radius 4px
        font-size 18px
        user-select none
        cursor: pointer;
        &:hover
            box-shadow inset 0 0 0 2px #555
            transition box-shadow 0.3s
        &[data-selected=true]
            box-shadow inset 0 0 0 2px #555

[data-name=document][contenteditable=false]
    [data-name=mcq] > [data-type=content],
    [data-name=hint] > [data-type=content]
        cursor pointer

[data-name=button]
    display flex;
    margin 20px 0;
    .carbon-button
        align-items center;
        justify-content center;
        min-width 90px
        background: #000;
        color #fff
        text-align center
        padding 6px 10px
        border-radius 4px
        user-select none
        font-weight bold
        caret-color #fff
    [data-name=title]:after
        color red


[data-name=explain]
    padding 5px 10px
    margin-bottom: 10px;
    position: relative;
    box-shadow 0 0 0 1px #eee
    border-radius 4px
    .carbon-block-explain
        font-size 12px
        position: absolute;
        top 6px
        right 6px
        padding 2px 6px
        background: #eee;
        font-weight bold;
        border-radius 2px
        //color #aaa
    > [data-type=children]
        padding-left: 0
        > *
            padding 0


[data-name="bold"]
    font-weight bold
[data-name="italic"]
    font-style italic

[data-name="codespan"]
    font-style italic
    background: #eaeaea
    color #c7254e
    margin 0 4px
    border-radius 4px
    padding 2px 4px
    font-size 13px
[data-name="background"]
    padding 2px 0


[data-name=section],
[data-name=collapsible],
[data-name=bulletList],
[data-name=numberList],
[data-name=todo]
    & > [data-type=content] .code
        font-size 14px

[data-name=h1],
[data-name=h2],
[data-name=h3],
[data-name=h4]
    & > [data-type=content] .code
        font-size 90%

[data-name=title]
    a
        color: #555
        text-decoration: none
        position: relative;

        &:after {
            content: '';
            width: 100%;
            position: absolute;
            left: 0;
            bottom: -1px

            border-width: 0 0 2px;
            border-style: solid;
        }

[data-name=partial]
    position: relative;
    font-size 13px
    margin: 40px 0 70px
    font-weight: 200
    font-family "GT America",Helvetica,Arial,sans-serif
    padding 4px 0

    &[data-mode=edit]
        margin-bottom: 40px;
    &[data-overflow=true]
        margin-bottom 70px

    .carbon-partial-body
        width: 100%;
        //height 100px
        overflow hidden
        white-space: nowrap;
        text-overflow: ellipsis;
    &[data-collapsed=true]
        .carbon-partial-body
            max-height 100px

    [data-name=title]
        padding-left 0!important
        line-height 24px
    .carbon-partial-footer
        margin-top: 4px;
        position: absolute;
        top: 100%
        right: 0
        font-weight bold
        cursor pointer
        user-select none
        //border 1px solid
        padding: 2px 4px;
        border-radius 4px
        text-align center
        width: 100%
        color #aaa
        &:hover
            background #eee
            color #555

a[data-name="text"]
    &:hover
        color #888

.document-mode-toggle
    position: absolute;
    top: 0;
    right: 0;
    padding: 4px 8px;
    background: #eee;
    border-radius: 4px;
    cursor: pointer;
    user-select: none;
    font-size: 12px;
    color: #555;
    margin 10px
    z-index 100
    &:hover
        background: #ddd

//[data-name=emoji]
[data-name=mention]
    border-radius: 4px;
    font-size: 14px;
    color: #999;
[data-name=mentionAtom]
    -webkit-user-modify: read-only

[data-name=title]
    span:last-child
        margin-right: 0
    span:first-child
        margin-left: 0

[data-name=bookmark]
    margin 10px 0
    display flex
    border 1px solid #eee
    border-radius 4px
    overflow hidden
    user-select none
    :hover
        background #eee
    .bookmark-wrapper
        width: 100%
        display flex
    .bookmark-content
        padding 12px
        flex 1
        width calc(100% - 250px)
        .bookmark-title
            font-size 14px
            margin-bottom 4px
            white-space: nowrap
            text-overflow: ellipsis
            overflow: hidden

        .bookmark-description
            font-size 12px
            color #999
            margin-bottom 4px
            line-height 16px
            height 32px
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;

        .bookmark-source
            font-size 12px
            color #555
            display flex
            gap 6px
            .bookmark-fabicon
                width 16px
                height 16px
                overflow hidden
                img
                    width 100%
                    height 100%
            .bookmark-src
                white-space: nowrap
                text-overflow: ellipsis
                overflow: hidden
                flex 1
                line-height 16px
                color #aaa

    .bookmark-image
        position: relative;
        width 250px
        height inherit
        background: #eee;
        overflow hidden
        .bookmark-image-wrapper
            position: absolute;
            overflow hidden
            height 100%
            width 100%
            display flex
            justify-content center
            align-items center
        img
            width 100%
[data-name=pageLink]
    height 30px
    width: 100%;
    display flex
    cursor pointer
    border-radius 4px
    a.pageLink-wrapper
        display flex
        align-items center
        padding 0 6px
        width: 100%;
        justify-content flex-start
        user-select none

    .page-link-icon
        width 22px
        height 22px
        display flex
        align-items center
        justify-content center
        border-radius 4px
        margin-right 10px
        img
            width 16px
            height 16px
    .page-link-text
        font-size 15px
        color #555
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden
        line-height 20px
        border-bottom 1px solid #eee

    :hover
        background #eee
        border-radius 4px
        cursor: pointer;

.multi-value-remove
    height 24px
    width 18px
    justify-content center
    align-items center
    padding-right: 5px;
    display none

    div
        //background: #000;
        height 16px
        width 16px
        border-radius 50%
        position: relative;
        svg
            transform scale(1.8)
.multi-value-label
    padding-right: 2px;
    font-size 17px!important
.select-focused
    .multi-value-label
        padding-right: -2px;
    .multi-value-remove
        display flex

