[data-name=pageTree]
[data-name=pageTreeItem]
  position: relative;
  user-select none

.button-style
  z-index: 1
  width: 20px
  height: 20px
  align-items: center
  justify-content: center
  cursor: pointer
  border-radius: 4px
  color: #aaa
  opacity 0
  font-size: 14px
  margin-left 4px;
  //display: none

  &:hover
    background: #ddd
    color #666

[data-name=pageTree]
  margin 4px 0
  font-size 14px
  padding 0 6px

  & > .ctiw
    font-size 12px
    color #aaa
    cursor pointer;
    font-weight bold
    user-select none;
    padding 4px 6px
    border-radius 4px
    display flex
    justify-content space-between
    align-items center

    &:hover
      color #666
      background #f0f0f0
      font-weight bold

    // toggle visibility of the add child file button

    > .add-child-file
      @extend .button-style

    &:hover
      .add-child-file
        opacity 1
        display flex

  & > .cnest
    margin-left 0;

  [data-name=title]:before
    display none

  [data-type=children]
    padding-top 4px

    &:hover
      background: #ddd
      color #666

[data-name=pageTreeItem]
  border-radius: 4px

  &[data-opened=true] > .ctiw
    background: #f0f0f0

  .ctiw
    width full
    position relative
    display: flex
    align-items: center
    padding: 4px 4px;
    border-radius 4px
    //height 28px

    &:hover
      background: #f0f0f0

    // hide the add child and edit file name buttons by default

    .page-tree-controls
      position absolute
      right 4px
      top 0
      height 100%
      display flex
      z-index 100
      align-items center

      .add-child-file, .edit-file-name
        @extend .button-style

      // show the add child and edit file name buttons on hover

      &:hover
        > .add-child-file, > .edit-file-name
          font-size 10px
          display flex
          opacity 1

  .cnest
    margin-left: 16px

  [data-name=plainText]
    flex 1
    color: #000
    overflow: hidden
    justify-content: flex-start
    margin-left 4px
    cursor: pointer
    line-height 22px
    padding-left 20px;

    &:hover
      color: #000
      cursor: pointer

    &[contenteditable=true]
      cursor: text

    &:after
      color #555
      line-height 22px

    span
      display: inline-block
      left: 0
      white-space: nowrap !important;
      text-overflow: ellipsis;
      overflow: hidden;
      min-width 1px;

  .page-tree__collapsible_control
    position absolute;
    color: #aaa
    background: transparent;
    width 20px
    height 20px
    display: flex
    align-items: center
    justify-content: center
    padding 0
    border-radius: 4px
    cursor pointer;

    &:hover
      background: #ddd
      color #666

    .page-tree-open-close-icon
      transition transform 0.2s

    &.collapsed > .page-tree-open-close-icon
      transform: rotate(0deg)

    &.expanded > .page-tree-open-close-icon
      transform: rotate(90deg)

  [data-empty="true"]
    font-size: 14px
    line-height: 20px
    user-select: none
    background transparent


  .carbon-collapsible__empty
    padding-left 28px
    color: #ccc
    font-size: 14px
    line-height: $lineHeight
    user-select: none

.after.ref-node-plainText
  margin-left 8px

