.block-options
  padding 2px
  position absolute;
  right 0
  top 0

div:has(>.block-options)
  &:hover
    .block-option-button
      opacity 0.8

.block-option-button
  font-size 12px
  padding 3px 5px
  border-radius 4px
  opacity 0
  transition opacity 0.2s
  &:hover
    background #f5f5f5
    cursor pointer
    opacity 1
