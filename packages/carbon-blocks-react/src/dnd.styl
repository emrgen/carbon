.carbon-node-handle
    position absolute
    user-select: none
    display: flex
    gap: 4px
    width 20px
    justify-content end
    padding-right 4px;
    //background red
    // flex-direction: row-reverse

    .carbon-add-handle
        cursor: pointer
        width 24px
        height: 24px
        border-radius: 4px
        display: flex
        align-items: center
        justify-content: center
        color #aaa
        padding: 0 1px
        font-size 15px

        &:hover
            background: #ddd
            color #555

        &:active
            background: #ccc
            color #444

        svg
            pointer-events: none

    .carbon-drag-handle
        cursor: grab
        width 20px
        height: 24px
        transition: opacity 0.3s
        border-radius: 4px
        display: flex
        align-items: center
        justify-content: center
        color #aaa
        font-size: 20px

        &:hover
            background: #ddd
            color #555

        &:active
            background: #ccc
            color #444

        svg
            pointer-events: none

