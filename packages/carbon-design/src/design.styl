$selected-border-color = #236af4

[data-name="deBoard"]
  position absolute;
  top 0;
  left 0
  width 100%
  height 100%
  overflow hidden
  background #fff
  background-image: radial-gradient(#999 1px, transparent 0);
  background-size: 40px 40px;
  background-position: -19px -19px;
  user-select none

.de-board--selection-area
  position absolute;
  top 0;
  left 0
  width 100%
  height 100%
  user-select none

.de-element--selected-border
  box-shadow inset 0 0 0 1px $selected-border-color, 0 0 0 1px $selected-border-color

.de-transformer
  position absolute
  //top -2px
  //left -2px
  //width calc(100% + 4px)
  //height calc(100% + 4px)
  //border 2px solid transparent
  user-select none
  border-radius 2px
  //background rgba(239, 112, 112, 0.58) !important

  &:hover
    @extend .de-element--selected-border

//padding 2px

.border-1px-solid
  //top -1px
  //left -1px
  //width calc(100% + 2px)
  //height calc(100% + 2px)
  border 1px solid $selected-border-color


.de-transformer.de-element--selected
  @extend .de-element--selected-border

.de-board--rect-selecting
  .de-transformer:not(.de-element--selected):hover
    //padding 1px
    @extend .border-1px-solid

.de-transformer.de-element--within-selecting-rect:not(.de-element--selected)
  @extend .border-1px-solid

.de-board--selection-group
  position absolute;
  border 2px dashed $selected-border-color

.de-board--overlay
  position absolute;
  top 0;
  left 0;
  background rgba(0, 0, 0, 0.02)
  z-index 1000
  width 100%;
  height 100%;
  user-select none
  //cursor grabbing

.resize-bottom-handle
.resize-top-handle
.resize-left-handle
.resize-right-handle
.resize-top-left-handle
.resize-top-right-handle
.resize-bottom-left-handle
.resize-bottom-right-handle
.rotate-bottom-handle
  position absolute;
  transition color .1s linear,background-color .1s linear
  box-shadow 0 0 4px 1px rgba(57, 76, 96, .15), 0 0 0 1px rgba(43, 59, 74, .3)
  z-index 1000
  user-select none
  background #fff
  &:hover
    background $selected-border-color

.resize-top-handle
.resize-bottom-handle
  left -11px
  top -8px
  border-radius 3px
  height 16px
  background transparent
  box-shadow none
  justify-content center
  align-items center
  display flex
  .transform-handle
    top: 50%;
    width 22px
    height 6px
    border-radius 3px
    background #fff
    cursor grab
    box-shadow 0 0 4px 1px rgba(57, 76, 96, .15), 0 0 0 1px rgba(43, 59, 74, .3)
    &:hover
      background $selected-border-color
  &:hover
    background transparent

.resize-left-handle
.resize-right-handle
  top -11px
  left -8px
  width 16px
  border-radius 3px
  background transparent
  box-shadow none
  display flex
  align-items center
  justify-content center
  .transform-handle
    top: 50%;
    width 6px
    height 22px
    border-radius 3px
    background #fff
    cursor grab
    box-shadow 0 0 4px 1px rgba(57, 76, 96, .15), 0 0 0 1px rgba(43, 59, 74, .3)
    &:hover
      background $selected-border-color
  &:hover
    background transparent

.resize-top-left-handle
.resize-top-right-handle
.resize-bottom-left-handle
.resize-bottom-right-handle
  left -5px
  top -5px
  width 10px
  height 10px
  border-radius 5px
  z-index 2000

.rotate-bottom-right-handle
.rotate-bottom-handle
  position absolute;
  left -8px
  top -8px
  height 16px;
  width 16px
  border-radius 50%;
  cursor grab

.de-board--selector
  opacity 0
  border 1px dashed $selected-border-color
  user-select none




.de-element-check
  position absolute;
  background-image:
    linear-gradient(45deg, #ccc 25%, transparent 25%),
    linear-gradient(135deg, #ccc 25%, transparent 25%),
    linear-gradient(45deg, transparent 75%, #ccc 75%),
    linear-gradient(135deg, transparent 75%, #ccc 75%);
  background-size:25px 25px; /* Must be a square */
  background-position:0 0, 12.5px 0, 12.5px -12.5px, 0px 12.5px

