$selected-border-color = #236af4

[data-name="deBoard"]
  position absolute;
  top 0;
  left 0
  width 100%
  height 100%
  overflow hidden
  background #fff
  background-image: radial-gradient(#999 1px, transparent 0);
  background-size: 40px 40px;
  background-position: -19px -19px;

.de-transformer
  position absolute
  //top -2px
  //left -2px
  //width calc(100% + 4px)
  //height calc(100% + 4px)
  border 2px solid transparent
  //background rgba(239, 112, 112, 0.58) !important

  &:hover
    border 2px solid $selected-border-color

//padding 2px

.border-1px-solid
  //top -1px
  //left -1px
  //width calc(100% + 2px)
  //height calc(100% + 2px)
  border 1px solid $selected-border-color


.de-transformer.de-element--selected
  border 2px solid $selected-border-color

.de-board--rect-selecting
  .de-transformer:not(.de-element--selected):hover
    //padding 1px
    @extend .border-1px-solid

.de-board--rect-selecting
  .de-transformer.de-element--within-selecting-rect:not(.de-element--selected)
    @extend .border-1px-solid

.de-board--selection-group
  position absolute;
  border 2px dashed $selected-border-color

.de-board--overlay
  pointer-events none
  position absolute;
  top 0;
  left 0;
  background rgba(0, 0, 0, 0.02)
  z-index 1000
  width 100%;
  height 100%;
  cursor crosshair


.resize-top-handle
.resize-bottom-handle
  position absolute;
  left -11px
  top -2px
  width 22px
  height 4px
  cursor s-resize
  background #fff
  border-radius 3px
  z-index 1000
  box-shadow 0 0 0 1px $selected-border-color


.resize-left-handle
.resize-right-handle
  position absolute;
  top -11px
  left -2px
  width 4px
  height 22px
  cursor e-resize
  background #fff
  border-radius 3px
  z-index 1000
  box-shadow 0 0 0 1px $selected-border-color

.resize-top-left-handle
.resize-top-right-handle
.resize-bottom-left-handle
.resize-bottom-right-handle
  position absolute;
  left -4px
  top -4px
  width 8px
  height 8px
  cursor nwse-resize
  background #fff
  border-radius 5px
  z-index 1000
  box-shadow 0 0 0 1px $selected-border-color














