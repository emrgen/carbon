[data-name="deBoard"]
  position absolute;
  top 0;
  left 0
  width 100%
  height 100%
  overflow hidden
  background #fff
  background-image: radial-gradient(black 1px, transparent 0);
  background-size: 40px 40px;
  background-position: -19px -19px;

//.de-element
  //opacity 0.5

.carbon-transformer
  position absolute
  top -2px
  left -2px
  width calc(100% + 4px)
  height calc(100% + 4px)
  border 2px solid transparent
  &:hover
    border-color teal

.carbon-transformer.de-element--selected
    border-color teal