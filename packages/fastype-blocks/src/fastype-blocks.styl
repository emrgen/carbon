[data-name=callout] [data-type=content]
  display: flex
  gap: 12px
  [data-name=title]
    flex 1
[data-name=callout]
	padding: 12px 12px

.fastype-callout-icon
  display: flex
  align-items: center

[data-name=separator]
  position relative
  margin-top 2px
  user-select: none
.fastype-separator
  display: flex
  align-items: center
  justify-content: center
  padding-top 18px
  padding-bottom 10px
  letter-spacing: 0.4em

.image-container
.video-container
  display: flex
  // border: 1px solid #ccc
  // max-width: 800px
  min-height: 60px
  // min-width: 200px
  justify-content: center
  align-items: center

[data-name=video]
  .video-controls
    opacity 0
    z-index: 10
  &:hover
    .video-controls
      opacity: 1
      transition: opacity 0.3s ease-in-out

[data-name=image]
  .image-controls
    opacity 0
    z-index: 10
  &:hover
    .image-controls
      opacity: 1
      transition: opacity 0.3s ease-in-out

.image-overlay,
.video-overlay
  background: #eee
  width 100%
  height: inherit
  cursor pointer

.carbon-overlay
  background: #eeeeee13
  background: rgba(10, 10, 10, 0.2)
