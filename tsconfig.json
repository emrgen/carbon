{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "paths": {
      // NOTE: without this the declare module module for command does not work
      "@emrgen/*": ["packages/*/dist", "packages/*/src"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  // "files": ["./env.d.ts"],
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["**/node_modules", "**/dist"]
}
