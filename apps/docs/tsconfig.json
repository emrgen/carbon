{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      // "@emrgen/*": ["../../packages/*/src"]
    },
    "rootDir": "src"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.t(s|sx)"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
